# Home Assistant Configuration
HOME_ASSISTANT_URL=http://192.168.1.148:8123
HOME_ASSISTANT_TOKEN=your_long_lived_access_token_here

# ESP32-CAM Configuration
ESP32_CAM_URL=http://192.168.1.127/capture

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Water Meter Input Number Entity ID in Home Assistant
WATER_METER_INPUT=input_number.water_meter_reading

# How often to read the meter (in minutes)
READING_INTERVAL_MINUTES=60

# Active Hours Configuration (24-hour format)
# Readings will only be taken between these hours
ACTIVE_HOURS_START=6
ACTIVE_HOURS_END=23

# Safety Configuration
# Maximum allowed difference between readings (in cubic meters)
MAX_READING_DIFFERENCE=1000
